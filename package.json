    "@slack/web-api": "^7.8.0",
    "@supabase/supabase-js": "^2.49.1",
    "cheerio": "^1.0.0",
    "crypto": "^1.0.1",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.40.0",
    "isbot": "^5.1.17",
    "oauth-1.0a": "^2.2.6",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "puppeteer": "^21.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "stream-browserify": "^3.0.0",
    "uuid": "^11.1.0"

    "@tailwindcss/vite": "^4.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "drizzle-kit": "^0.30.5",
    "react-router-devtools": "^1.1.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4"
  }

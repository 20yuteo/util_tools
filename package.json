{
  "name": "util-tools",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "sql": "drizzle-kit generate",
    "drop": "drizzle-kit drop",
    "migrate": "drizzle-kit push",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "prebuild:lambda": "mkdir -p dist/lambda infra/modules/lambda",
    "build:lambda": "esbuild functions/cron.ts --bundle --platform=node --target=node20 --outfile=dist/lambda/cron.js",
    "package:lambda": "cd dist/lambda && zip -r ../../infra/modules/lambda/lambda_function.zip ."
  },
  "dependencies": {
    "@google/generative-ai": "^0.22.0",
